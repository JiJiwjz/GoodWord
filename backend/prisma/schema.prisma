generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Word {
  id           Int      @id @default(autoincrement())
  english      String   @unique
  phonetic     String?
  partOfSpeech String
  englishDef   String? 
  chineseDef   String
  
  isCET4      Boolean @default(false)
  isCET6      Boolean @default(false)
  isIELTS     Boolean @default(false)
  isTOEFL     Boolean @default(false)
  isGraduate  Boolean @default(false)
  
  cet4Freq     Int?
  cet6Freq     Int?
  ieltsFreq    Int? 
  toeflFreq    Int? 
  graduateFreq Int? 
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  quizRecords QuizRecord[]
}

model QuizSession {
  id           Int       @id @default(autoincrement())
  sessionId    String    @unique
  wordCount    Int
  wordIds      String
  phase2Data   String?    // 存储阶段2的选项数据
  correctCount Int       @default(0)
  wrongCount   Int       @default(0)
  status       String    @default("ongoing")
  createdAt    DateTime  @default(now())
  completedAt  DateTime?
}

model QuizRecord {
  id         Int      @id @default(autoincrement())
  wordId     Int
  sessionId  String
  userAnswer String
  isCorrect  Boolean
  phase      Int      @default(1)  // 1=中译英, 2=英译中
  quizDate   DateTime @default(now())
  
  word Word @relation(fields: [wordId], references: [id])
}
